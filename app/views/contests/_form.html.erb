<div class= "register-photo"> 
    <div class="container ">      
        <% if @contest.errors.any? %>
        <div class="alert alert-danger">
        <h2>The following errors prevented the contest from getting created</h2>
        <ul>
            <% @contest.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>  
        </div>
        <% end %>
    </div>    

    <div class="form-container"> 
    <%= form_for @contest do |f| %>
        
             <h1 class="text-center"> <strong>Create</strong> an Contest </h1>
             <div class="form-group">
                <%= f.text_field :title, class: "form-control", placeholder: "Title fo contest" %>
             </div>
             <div class="form-group">
                <%= f.text_field :categories, class: "form-control", placeholder: "Category Of contest" %>
             </div>
             <div class="row">
                 <div class="col-md-6 form-group"><%= f.date_field :start_date,  class: "form-control", placeholder: "Start Date:" %></div>
                 <div class="col-md-6 form-group"><%= f.date_field :end_date,  class: "form-control", placeholder: "End Date:" %></div>
             </div>
             <div class="form-group">
                <%= f.text_field :locations, class: "form-control", placeholder: "Contest Available for locations" %>
             </div>             
            <div class="form-group">
                <%= f.text_area :description, class: "form-control", placeholder: "Description of Contest" %>
            </div>
            <div class="form-group">
            <label class="form-control">Terms and Conditions(PDF Only):    
                <%= f.file_field :terms_and_conditions, accept: 'application/pdf' %></label>
             </div>  
            <div class="row">
                
                <%= f.submit  class: "btn btn-primary btn-block"%>
            </div>
            </div>
        </div>    
    <% end %>
    
    <%= link_to "Back to contests listing", contests_path%>
</div>