    <div class="container">    
        <h2 class="display-4" align="center"><%= @contest.title %></h2>
        <div class="jumbotron">
        <ul class="listing">
            <div class="row">
                <div class="col-md-12" align="center">
                    <li><%= link_to gravatar_for(@contest.user), user_path(@contest.user)%></li>
                    <li class="contest-title">
                        <% link_to @contest.user.username, user_path(@contest.user) %>
                    </li>
                    <li><small><%= pluralize(@contest.user.contests.count, "contest") if @contest.user.contests %></small></li>
                </div>
            </div>    
        </ul>
        
        <h4 class="center"><strong>Description:-</strong></h4>  
          
            <%= simple_format(@contest.description) %><hr>
            
        <p>Category:-  <%= @contest.categories %></p><hr>
        <p>Start Date:-  <%= @contest.start_date %></p><hr>
        <p>End Date:-  <%= @contest.end_date %></p>   <hr>
        <p>Locations:-  <%= @contest.locations %></p><hr>
        <p>Image name:-  <%= @contest.terms_and_conditions %></p><hr>
    
    
        <div class="contest_actions">
          <%= link_to "Edit This contest", edit_contest_path(@contest), class: "btn btn-xs btn-primary" %>
          <%= link_to "Delete This contest", contest_path(@contest), 
              method: :delete,
              data: { comfirm: "Are you sure you want to delete the contest?"}, 
              class: "btn btn-xs btn-danger" %>
          <%= link_to "View all contests", contests_path, class: "btn btn-xs btn-success" %>    
        </div>
    </div> 
    </div>


  