<div class="jumborton col-xs-8 col-xs-offset-2">
    <div class="container">    
        <h2 class="display-4">Title:- <%= @contest.title %></h2>
        <h4 class="center"><strong>Description:-</strong></h4>  
            <hr>
            <%= simple_format(@contest.description) %>
            
        <p>Category:-  <%= @contest.categories %></p>
        <p>Start Date:-  <%= @contest.start_date %></p>
        <p>End Date:-  <%= @contest.end_date %></p>   
        <p>Locations:-  <%= @contest.locations %></p>
        <p>Image name:-  <%= @contest.terms_and_conditions %></p>
    
    
        <div class="contest_actions">
          <%= link_to "Edit This contest", edit_contest_path(@contest), class: "btn btn-xs btn-primary" %>
          <%= link_to "Delete This contest", contest_path(@contest), 
              method: :delete,
              data: { comfirm: "Are you sure you want to delete the contest?"}, 
              class: "btn btn-xs btn-danger" %>
          <%= link_to "View all contests", contests_path, class: "btn btn-xs btn-success" %>    
        </div>
    </div>    
</div>

  